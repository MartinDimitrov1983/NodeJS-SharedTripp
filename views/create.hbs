    <section class="py-5">
        <div class="container">
            <h1 style="margin: 2%; text-align: center;">Offer Tripp</h1>
            <div style="padding: 5%;">
                <form action="/trip/create" method="POST">
                    <div class="form-group">
                        <label for="startAndEndPoint">Starting Point - End Point</label>
                        <input type="text" name="startAndEndPoint" class="form-control" id="startAndEndPoint" aria-describedby="emailHelp"
                            placeholder="Starting Point - End Point">
                    </div>
                    <div class="form-group">
                        <label for="dateTime">Date - Time</label>
                        <input type="text" name="dateTime" class="form-control" id="dateTime" placeholder="Date - Time">
                    </div>
                    <div class="form-group">
                        <label for="carImage">Car Image</label>
                        <input type="text" name="carImage" class="form-control" id="carImage" placeholder="https://...">
                    </div>
                    <div class="form-group">
                        <label for="seats">Seats</label>
                        <input min="1" max="6" type="number" name="seats" class="form-control" id="seats" placeholder="4...">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" name="description" class="form-control" id="description"
                            placeholder="Price, Car information...">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </section>